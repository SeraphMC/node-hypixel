{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es2015",
    "types": ["node", "mocha"],
    "alwaysStrict": true,
    "incremental": true,
    "pretty": true,
    "strict": true,
    "removeComments": false,
    "stripInternal": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist/"
  ]
}
